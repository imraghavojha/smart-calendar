{
    "model": {
        "name": "t5-large",
        "max_length": 256,
        "batch_size": 1,              // Reduced batch size
        "learning_rate": 2e-4,
        "epochs": 5,                  // Reduced epochs
        "gradient_accumulation_steps": 8,
        "warmup_steps": 50,
        "weight_decay": 0.01,
        "train_display_steps": 1      // Show progress more frequently
    },
    "data": {
        "train_examples": 81,
        "validation_split": 0.1,
        "max_examples_per_type": 50,
        "min_examples_per_type": 10
    },
    "optimization": {
        "quantize": true,
        "quantization_type": "dynamic",
        "target_size": "int8",
        "pruning": false,
        "gradient_checkpointing": true  // Added to save memory
    }
}